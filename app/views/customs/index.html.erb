<div class="container-fluid content">
	<table class="table table-striped">
  <tr>
    <th>Date Created</th>
    <th>Name</th>
    <th>Status</th>
    <th>Paid?</th>
    <th>View</th>
    <!-- <th>Delete</th> -->
  </tr>
 
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td><%= order.name %></td>
      <td><%= order.status %><%= link_to "Edit", edit_custom_path(order) %></td>
      <td><%= order.bill.is_paid %>(<%= link_to "edit bill", edit_bill_path(order.bill)%>)</td>
      <td><%= link_to "View", custom_path(order, :code => order.pass_key) %></td>
     <!--  <td><%#= link_to 'Destroy', custom_path(order),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td> -->
    </tr>
  <% end %>
</table>
</div>